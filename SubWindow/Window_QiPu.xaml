<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  x:Class="Chess.Window_QiPu"
        mc:Ignorable="d"
        Title="棋谱库列表" Height="450" Width="800" Loaded="WindowQiPu_Load" WindowState="Maximized" Icon="/picture/象128.png">
    <Grid>
        <DataGrid x:Name="datagrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding rowid}" Header="编号"/>
                <DataGridTextColumn Binding="{Binding date}" Header="日期"/>
                <DataGridTextColumn Binding="{Binding author}" Header="作者"/>
                <DataGridTextColumn Binding="{Binding title}" Header="标题" />
                <DataGridTextColumn Binding="{Binding type}" Header="类型" />
                <DataGridTextColumn Binding="{Binding video}" Header="视频" />
                <DataGridTextColumn Binding="{Binding record}" Header="棋谱" >
                    
                </DataGridTextColumn>
            </DataGrid.Columns>
            <d:TabItem/>
        </DataGrid>
        <TextBlock x:Name="qplst" HorizontalAlignment="Stretch" Margin="18,0,474,59" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="34,335,0,0" VerticalAlignment="Top" Click="qipuListRefresh"/>
    </Grid>
</Window>
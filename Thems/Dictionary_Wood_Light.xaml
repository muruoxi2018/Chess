<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="button" TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#FF564808"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="#FFD8B67C"/>
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Opacity="0.5" ShadowDepth="5" BlurRadius="5" Color="#FF6D530D" RenderingBias="Performance"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="mainMenuButton" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="20,10,20,10"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Foreground" Value="#FF3A3A3A"/>
        <Setter Property="BorderBrush" Value="#FF463403"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/picture/Resource/木纹3.png" Stretch="None" TileMode="None" Opacity="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="KaiTi"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="2,2,2,2"/>

    </Style>
    <Style x:Key="borderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#FF463403"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/picture/Resource/木纹_浅色3000.png" Stretch="Fill" TileMode="None" Opacity="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="setupWindowBackground" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="#FF423703"/>
    </Style>
</ResourceDictionary>